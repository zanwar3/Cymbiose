generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Diagnosis {
  id                      String   @id @default(cuid())
  clientId                String   @map("client_id")
  diagnosisName           String   @map("diagnosis_name")
  predictedDate           DateTime @map("predicted_date")
  justification           String
  challengedDiagnosis     String?  @map("challenged_diagnosis")
  challengedJustification String?  @map("challenged_justification")
  updatedAt               DateTime @updatedAt @map("updated_at")
  createdAt               DateTime @default(now()) @map("created_at")

  @@map("diagnoses")
  @@index([clientId])
  @@index([predictedDate])
}
